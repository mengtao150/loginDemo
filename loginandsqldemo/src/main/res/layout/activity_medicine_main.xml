<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".medicineMain">


    <Button
        android:id="@+id/medicine_addbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:text="药物增加"
        app:layout_constraintBaseline_toBaselineOf="@+id/medicine_searchbt"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/medicine_delbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:text="药物删除"
        app:layout_constraintBaseline_toBaselineOf="@+id/medicine_changebt"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/medicine_searchbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="78dp"
        android:text="药物查询"
        app:layout_constraintStart_toEndOf="@+id/medicine_addbt"
        app:layout_constraintTop_toBottomOf="@+id/medicineother_edit" />

    <EditText
        android:id="@+id/medicine_edit"
        android:layout_width="243dp"
        android:layout_height="53dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="93dp"
        android:layout_marginBottom="92dp"
        android:hint="药物名"
        app:layout_constraintBottom_toTopOf="@+id/medicineother_edit"
        app:layout_constraintStart_toStartOf="@+id/frequency_edit"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/medicineother_edit"
        android:layout_width="218dp"
        android:layout_height="65dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:hint="药物别名"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/frequency_edit"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="23dp"
        android:hint="频度"
        app:layout_constraintBottom_toTopOf="@+id/medicineother_edit"
        app:layout_constraintEnd_toEndOf="@+id/medicineother_edit"
        app:layout_constraintStart_toStartOf="@+id/medicine_delbt"
        app:layout_constraintTop_toBottomOf="@+id/medicine_edit" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="174dp"
        android:layout_height="17dp"
        android:layout_marginStart="81dp"
        android:layout_marginLeft="81dp"
        android:layout_marginTop="78dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/medicine_changebt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="52dp"
        android:text="药物修改"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/medicine_delbt" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medicine_addbt" />
</androidx.constraintlayout.widget.ConstraintLayout>
