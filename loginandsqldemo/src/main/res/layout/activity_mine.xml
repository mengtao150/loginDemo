<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/minebackground"
    tools:context=".Mine">
    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/picture"
      android:layout_alignParentTop="true"
        />

    <View  android:layout_height="1px"
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:background="#0A0909"
        android:layout_margin="15sp"
        android:layout_below="@+id/image"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="30sp"
        android:text="用户名"
        android:textSize="30sp"
        android:textColor="#1B1B1B"
        android:textStyle="italic"
        android:layout_below="@+id/view1"

        />

    <TextView
        android:id="@+id/nametxt"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/name"
        android:padding="15sp"
        android:text="孟涛"
        android:textColor="#747171"
        android:textSize="30sp" />
    <View  android:layout_height="1px"
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:background="#0A0909"
        android:layout_below="@+id/name"
        android:layout_margin="15sp"

        />

    <TextView
        android:id="@+id/sex"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_marginTop="15dp"
        android:text="性别"
        android:textColor="#1B1B1B"
        android:textSize="30sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/sextxt"
        android:layout_width="130dp"
        android:layout_height="53dp"
        android:layout_below="@+id/view2"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/sex"
        android:text="   男"
        android:textColor="#747171"
        android:textSize="30sp" />
    <View  android:layout_height="1px"
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:background="#0A0909"
        android:layout_below="@+id/sex"
        android:layout_margin="15sp"
        />
    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号"
        android:textColor="#1B1B1B"
        android:textSize="30sp"
        android:textStyle="italic"
        android:layout_below="@+id/view3"
       android:layout_marginTop="15sp"
        />

    <TextView
        android:id="@+id/phonetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view3"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/phone"
        android:text="15055910401"
        android:textColor="#747171"
        android:textSize="30sp" />

    <View  android:layout_height="1px"
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:background="#0A0909"
        android:layout_below="@+id/phone"
        android:layout_margin="15sp"

        />
    <TextView
        android:id="@+id/worknumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="职工号"
        android:textColor="#1B1B1B"
        android:textSize="30sp"
        android:textStyle="italic"
        android:layout_below="@+id/view4"
        />

    <TextView
        android:id="@+id/worknumbertxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view4"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="15sp"
        android:layout_toRightOf="@+id/worknumber"
        android:text="201801020105"
        android:textColor="#747171"
        android:textSize="30sp" />
    <ImageView
        android:id="@+id/guanyuImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/guanyu"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/worknumber"
        />

    <ImageButton
        android:id="@+id/about_image_bt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/worknumbertxt"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"

        android:layout_toRightOf="@+id/guanyuImage"
        android:src="@drawable/button_guan" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guanyuImage"
        android:layout_margin="50dp"

        android:background="#ff0000"
        android:text="退出登录"
        android:textColor="#ECECE6"
        android:textSize="20dp" />

    <Button
        android:id="@+id/modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guanyuImage"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"

        android:layout_marginBottom="50dp"
        android:layout_toRightOf="@+id/exit"
        android:background="#ff0000"
        android:text="修改信息"
        android:textColor="#ECECE6"
        android:textSize="20dp" />


</RelativeLayout>